<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green_soft"
    tools:context=".boundary.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrain_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.mdp_group11.boundary.GridView
                android:id="@+id/grid_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:border_color="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/obstacle_text"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="200sp"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:lines="1"
                android:text="OBSTACLES:"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/grid_map"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.mdp_group11.boundary.ObstacleBoxView
                android:id="@+id/obstacle_box"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/dotted"
                android:text="0"
                app:layout_constraintStart_toEndOf="@+id/grid_map"
                app:layout_constraintTop_toBottomOf="@id/obstacle_text" />

            <com.example.mdp_group11.boundary.ObstacleView
                android:id="@+id/obstacle8"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:autoSizeMaxTextSize="200sp"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:backgroundTint="@color/teal_700"
                android:lines="1"
                android:text="8"
                app:layout_constraintStart_toEndOf="@+id/grid_map"
                app:layout_constraintTop_toBottomOf="@id/obstacle_text" />

            <com.example.mdp_group11.boundary.ObstacleView
                android:id="@+id/obstacle7"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:autoSizeMaxTextSize="200sp"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:backgroundTint="@color/teal_700"
                android:lines="1"
                android:text="7"
                app:layout_constraintStart_toEndOf="@+id/grid_map"
                app:layout_constraintTop_toBottomOf="@id/obstacle_text" />

            <com.example.mdp_group11.boundary.ObstacleView
                android:id="@+id/obstacle6"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:autoSizeMaxTextSize="200sp"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:backgroundTint="@color/teal_700"
                android:lines="1"
                android:text="6"
                app:layout_constraintStart_toEndOf="@+id/grid_map"
                app:layout_constraintTop_toBottomOf="@id/obstacle_text" />

            <com.example.mdp_group11.boundary.ObstacleView
                android:id="@+id/obstacle5"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:autoSizeMaxTextSize="200sp"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:backgroundTint="@color/teal_700"
                android:lines="1"
                android:text="5"
                app:layout_constraintStart_toEndOf="@+id/grid_map"
                app:layout_constraintTop_toBottomOf="@id/obstacle_text" />

            <com.example.mdp_group11.boundary.ObstacleView
                android:id="@+id/obstacle4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:autoSizeMaxTextSize="200sp"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:backgroundTint="@color/teal_700"
                android:lines="1"
                android:text="4"
                app:layout_constraintStart_toEndOf="@+id/grid_map"
                app:layout_constraintTop_toBottomOf="@id/obstacle_text" />

            <com.example.mdp_group11.boundary.ObstacleView
                android:id="@+id/obstacle3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:autoSizeMaxTextSize="200sp"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:backgroundTint="@color/teal_700"
                android:lines="1"
                android:text="3"
                app:layout_constraintStart_toEndOf="@+id/grid_map"
                app:layout_constraintTop_toBottomOf="@id/obstacle_text" />

            <com.example.mdp_group11.boundary.ObstacleView
                android:id="@+id/obstacle2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:autoSizeMaxTextSize="200sp"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:backgroundTint="@color/teal_700"
                android:lines="1"
                android:text="2"
                app:layout_constraintStart_toEndOf="@+id/grid_map"
                app:layout_constraintTop_toBottomOf="@id/obstacle_text" />

            <com.example.mdp_group11.boundary.ObstacleView
                android:id="@+id/obstacle1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:autoSizeMaxTextSize="200sp"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:backgroundTint="@color/teal_700"
                android:lines="1"
                android:text="1"
                app:layout_constraintStart_toEndOf="@+id/grid_map"
                app:layout_constraintTop_toBottomOf="@id/obstacle_text" />

            <com.example.mdp_group11.boundary.RobotView
                android:id="@+id/robotBound"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/robot_bound_box"
                app:layout_constraintStart_toEndOf="@+id/grid_map"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/robotCar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@android:color/transparent"
                android:src="@drawable/pacman2"
                app:layout_constraintStart_toEndOf="@+id/robotBound"
                app:layout_constraintTop_toTopOf="@id/robotBound" />

            <LinearLayout
                android:id="@+id/ll_button_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/obstacle_box"
                app:layout_constraintTop_toBottomOf="@id/obstacle_box">

                <Button
                    android:id="@+id/button_reset"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:drawableTint="@color/black"
                    android:scaleType="fitCenter"
                    android:text="RESET BOARD"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_do_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button_undo"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/white"
                        android:drawableTint="@color/black"
                        android:scaleType="fitCenter"
                        android:text="UNDO OBS"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button_fastest"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:drawableRight="@drawable/fast"
                android:text="FASTEST"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/ll_button_holder"
                app:layout_constraintTop_toBottomOf="@id/ll_button_holder" />

            <Button
                android:id="@+id/button_explore"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:drawableRight="@drawable/camera"
                android:text="IMG REC"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/ll_button_holder"
                app:layout_constraintTop_toBottomOf="@id/button_fastest" />

            <LinearLayout
                android:id="@+id/ll_timer_holder"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="8dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="@id/button_explore"
                app:layout_constraintTop_toBottomOf="@id/button_explore">

                <TextView
                    android:id="@+id/text_timer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/teal_700"
                    android:gravity="center"
                    android:lines="1"
                    android:text="Timer: MM:SS:MS"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/button_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:drawableTint="@color/white"
                    android:lines="1"
                    android:text="START"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_stop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:drawableTint="@color/white"
                    android:lines="1"
                    android:text="STOP"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/timer_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="*Hold Stop To Reset Timer*"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1.05">

                <TextView
                    android:id="@+id/communications_textbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:text="COMMS"
                    android:textColor="@color/white"
                    android:background="@drawable/textview_border"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp" />

                <ScrollView
                    android:id="@+id/scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:fillViewport="true">

                    <TextView
                        android:id="@+id/comms_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="220dp"
                        android:scrollbars="vertical"
                        android:background="@drawable/rounded_border" />
                </ScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp" >

                    <EditText
                        android:id="@+id/comms_edit_box"
                        android:layout_width="240dp"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_border"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center|start"
                        android:paddingStart="8dp"
                        android:textStyle="bold"
                        android:hint="Enter Message:"/>

                    <ImageButton
                        android:id="@+id/send_message_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/send_message"
                        android:background="@drawable/rounded_border"
                        android:scaleType="fitCenter"/>

                </LinearLayout>
                <Button
                    android:id="@+id/bluetoothButton"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:text="Bluetooth connection"
                    android:scaleType="fitCenter"
                    android:textColor="@color/white"
                    android:background="@drawable/textview_border"
                    />
                </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.95"
                android:layout_marginTop="52dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_vertical_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_horizontal_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.8" />

                <TextView
                    android:id="@+id/status_textbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STATUS"
                    android:textColor="@color/white"
                    android:background="@drawable/textview_border"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:id="@+id/robotStatus"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:text="Not Available"
                    android:textColor="@color/dark_green"
                    android:textSize="13sp"
                    android:textAlignment="center"
                    android:paddingTop="15dp"
                    android:background="@drawable/rounded_border"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:id="@+id/controls_textbox"
                    android:layout_marginTop="90dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONTROLS"
                    android:textColor="@color/white"
                    android:background="@drawable/textview_border"
                    android:paddingLeft="27dp"
                    android:paddingRight="27dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <ImageButton
                    android:id="@+id/button_forward"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/forward_arrow"
                    android:background="@drawable/arrow_border"
                    app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_center"
                    app:layout_constraintEnd_toEndOf="@id/guideline_vertical_center"
                    app:layout_constraintStart_toStartOf="@id/guideline_vertical_center"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageButton
                    android:id="@+id/button_turn_left"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/left_arrow"
                    android:background="@drawable/arrow_border"
                    app:layout_constraintEnd_toStartOf="@id/button_forward"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/button_forward"/>

                <ImageButton
                    android:id="@+id/button_turn_right"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/right_arrow"
                    android:background="@drawable/arrow_border"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/button_forward"
                    app:layout_constraintTop_toTopOf="@id/button_forward"/>

                <ImageButton
                    android:id="@+id/button_back_left"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/reverse_left_arrow"
                    android:background="@drawable/arrow_border"
                    app:layout_constraintEnd_toStartOf="@id/button_backward"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/button_forward"/>

                <ImageButton
                    android:id="@+id/button_back_right"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/reverse_right_arrow"
                    android:background="@drawable/arrow_border"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/button_backward"
                    app:layout_constraintTop_toTopOf="@id/button_back_left"/>

                <ImageButton
                    android:id="@+id/button_backward"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/reverse_arrow"
                    android:background="@drawable/arrow_border"
                    app:layout_constraintTop_toBottomOf="@+id/button_forward"
                    app:layout_constraintStart_toEndOf="@+id/button_back_left"
                    app:layout_constraintEnd_toStartOf="@+id/button_back_right" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>